@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
	<div class="category">
		<h2 id="hideshowfibo"><label>GET</label>Fibonacci</h2>
	</div>
	<div id="fibonumber">
		<h3>Number:<input type="number" id="number"></h3>
		<input type="submit" id="numbersubmit" value="Submit"><br/>
		<h3><p id="fiboresult"></p></h3>
	</div>

	<div class="category">
		<h2 id="hideshowreverse"><label>GET</label> Reversed Words</h2>
	</div>
	<div id="reversewords">
		<h3>Text:<input type="text" id="text"></h3>
		<input type="submit" id="textsubmit" value="Submit"><br/>
		<p id="reverseresult"></p>
	</div>

	<div class="category">
		<h2 id="hideshowtriangle"><label>GET</label>Triangle Type</h2>
	</div>
	<div id="triangletype">
		<h3>a:<input type="text" id="a"></h3>
		<h3>b:<input type="text" id="b"></h3>
		<h3>c:<input type="text" id="c"></h3>
		<input type="submit" id="gettriangle" value="Submit"><br/>
		<p id="resulttype"></p>
	</div>
</div>

@section scripts{
   @Scripts.Render("~/bundles/jquery")
}